<% provide(:title, "会員一覧") %>

<br><br>
<center>
  
    <div class="col-xs-10 col-xs-offset-1">
      <h2>会員一覧</h2>
  	  
  	  <br>

      <table class="table table">
        <thead>
          <tr class="info bg-light">
            <th><center>会員ID</center></th>
            <th><center>氏名</center></th>
            <th><center>メールアドレス</center></th>
            <th><center>ステータス</center></th>
          </tr>
        </thead>

        <tbody>
        <% @customers.each do |customer| %>
          <tr>
            <td>
              <center>
              <%= customer.id %>
              </center>
            </td>
            <td>
              <center>
              <%= link_to admin_customer_path(customer), class: "btn-light"  do %>
                <i class="far fa-user"></i>
                <%= full_name(customer) %>
              <% end %>
              </center>
            </td>
            <td>
              <center>
              <%= customer.email %>
              </center>
            </td>
            <td>
              <center>
              <% if customer.is_deleted == true%>
                <p><i class="fas fa-bullseye blue"></i>退会済</p>
              <% else %>
                <p><i class="fas fa-bullseye red"></i>有効</p>
              <% end %>
              </center>
            </td>
          </tr>
        <% end %>
        <%= paginate(@customers) %>
        </tbody>
      </table>
    </div>
    
</center>
<br><br>