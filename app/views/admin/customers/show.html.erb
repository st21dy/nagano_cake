<% provide(:title, "会員一覧") %>

<br><br>
<center>

  <div class="col-xs-10 col-xs-offset-1">
    
      <strong><h3><%= full_name(@customer) %>さんの会員詳細</h3></strong>
      <br>
      
        <table class="table-center">
          
          <tr>
            <th class="col-xs-2">顧客ID</th>
            <td class="col-xs-10"><%= @customer.id %>
            <% if @customer.is_deleted == true %>
              <span>　<i class="fas fa-bullseye blue"></i>退会済
            <% elsif @customer.is_deleted == false %>
            　<i class="fas fa-bullseye red"></i>有効会員</span>
            <% end %>
            </td>
          </tr>
          
          <tr>
            <th>氏名</th>
            <td><%= full_name(@customer) %></td>
          </tr>
          
          <tr>
            <th>フリガナ</th>
            <td><%= kana_full_name(@customer) %></td>
          </tr>
          
          <tr>
            <th>郵便番号</th>
            <td><%= @customer.postal_code %></td>
          </tr>
          
          <tr>
            <th>住所</th>
            <td><%= @customer.residence %></td>
          </tr>
          
          <tr>
            <th>電話番号</th>
            <td><%= @customer.telephone_number %></td>
          </tr>
          
          <tr>
            <th>メールアドレス</th>
            <td><%= @customer.email%></td>
          </tr>
          
        </table>
        
        <br>

        <div>
          <%= link_to "編集する",edit_admin_customer_path(@customer), class: "btn btn-dark" %>
          <%= link_to " 注文履歴一覧を見る", current_index_admin_order_path(@customer), class: "btn btn-dark" %>
        </div>
      
    </div>
 
  </center>
  <br><br>