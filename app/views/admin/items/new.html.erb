<% provide(:title, "商品新規登録") %>

<br><br>
<center>

  <div class="col-md-10 col-md-offset-1 col-xs-10 col-xs-offset-1">
    <div>
    <%= form_for(@item, url: admin_items_path, method: :post, class: "form-horizontal") do |f| %>
    <%= render "layouts/error_messages", resource: @item %>
    
    <div>
      <h3>商品新規登録</h3>
      <br>
     
      <div class="item-new-form">
        <%= f.attachment_field :image %>
      </div>
      <div class="product-img" style="margin-top: 20px;">
        <%= image_tag 'no_image.jpg', id:"file-preview", :size => '350×350' %>
      </div>
    </div>

    <br><br><br>
      <div>
        
        <table class="new-form-table">
          <tbody>

            <tr>
              <th>商品名</th>
              <td><%= f.text_field :name, class: "form-control" %></td>
            </tr>

            <tr>
              <th>商品説明</th>
              <td><%= f.text_area :introduction, class: "form-control" %></td>
            </tr>

            <tr>
              <th>ジャンル</th>
              <td><%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --") %></td>
            </tr>

            <tr>
              <th>税抜価格</th>
              <td>  <%= f.text_field :price, class: "form-control" %></td>
            </tr>

            <tr>
              <th>販売ステータス</th>
              <td><%= f.select :is_active, [['販売中', true], ['販売停止', false]], prompt: "-- 選択してください --" %></td>
            </tr>
  
          </tbody>
        </table>
        
        <div class="text-right">
          <%= f.submit "新規登録" ,class: "btn btn-dark text-right" %>
        </div>
      </div>
      <% end %>

    </div>
  </div>

</center>
<br><br>