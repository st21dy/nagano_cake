<% provide(:title, "商品編集") %>

<br><br>
<center>

  <div class="col-xs-10 col-xs-offset-1">
    
    <%= form_for(@item, url: admin_item_path, method: :patch, class: "form-horizontal") do |f| %>
    <%= render "layouts/error_messages", resource: @item %>
    
    <div class="col-xs-5">
     <h3>商品編集</h3>

      <div class="item-new-form">
        <%= f.attachment_field :image %>
      </div>
      
      <div class="product-img" style="margin-top: 20px;">
        <%= attachment_image_tag(@item, :image, size: "300x220") %>
      </div>
    </div>
    
    <br>
      <div class="col-xs-5 col-xs-offset-2">

      <table class="new-form-table">
        <tbody>

          <tr>
            <th>商品名</th>
            <td><%= f.text_field :name, class: "form-control" %></td>
          </tr>

          <tr>
            <th>商品説明</th>
            <td><%= f.text_area :introduction, class: "form-control" %></td>
          </tr>

          <tr>
            <th>ジャンル</th>
            <td><%= f.collection_select(:genre_id, @genres, :id, :name, prompt: "-- 選択してください --") %></td>
          </tr>

          <tr>
            <th>税抜価格</th>
            <td>  <%= f.text_field :price, class: "form-control" %></td>
          </tr>

          <tr>
            <th>販売ステータス</th>
            <td><%= f.select :is_active, [['販売中', true], ['販売停止', false]], prompt: "-- 選択してください --" %></td>
          </tr>
  
        </tbody>
      </table>
      
      <br>
      
      <div class="actions">
	      <%= f.submit "変更を保存", class: "btn btn-dark" %>
      </div>

      </div>
    <% end %>
    
  </div>

</center>
<br><br>