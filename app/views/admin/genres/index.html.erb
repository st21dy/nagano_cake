<% provide(:title, "ジャンル一覧・追加") %>

<br><br>
<center>
<div>
    <div class="col-xs-10 col-xs-offset-1">

      <h2>ジャンル一覧・追加</h2><br>

    <div class="form-group col-md-10">
    <%= form_for @genre, :url => {:action => :create} do |f| %>
          
    <%= render "layouts/error_messages", resource: @genre %>
            
            
            <%= f.label :ジャンル %>
            <%= f.text_field :name  %>
            
            <%= f.submit "新規登録", class: "btn btn-dark" %>
          
    <% end %>
    </div>
    
    <br>
 
    <table class="table table-center">
      <thead>
        <tr class="info bg-light">
          <th class="text-center">ジャンル</th>
          <th></th>
        </tr>
      </thead>
      
      <tbody>
      <% @genres.each do |genre| %>
        <tr>
          <td class="text-center"><%=genre.name %></td>
          <td class="text-center"><%= link_to "編集する", edit_admin_genre_path(genre), class: "btn btn-dark" %></td>
        </tr>
      <% end %>
      </tbody>
    </table>
    
    </div>
    
    <div class= "text-center"><%= paginate(@genres) %></div>
</div>
</center>
<br><br>