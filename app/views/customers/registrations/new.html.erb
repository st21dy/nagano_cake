<% provide(:title, "新規会員登録") %>

<br><br>

<div class="contaier">
    <h3>新規会員登録</h3>
    
    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "layouts/error_messages", resource: resource %>
      
      <div class="row">
        <label class="col-lg-3">名前</label>
        <div class="col-lg-3">
          <%= f.text_field :last_name,autoforcus: true, autocomplete: "last_name",  placeholder: "(姓)" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :first_name,autoforcus: true, autocomplete: "first_name",  placeholder: "(名)" %>
        </div>
      </div><br>
      
      <div class="row">
        <label class="col-lg-3">フリガナ</label>
        <div class="col-lg-3">
          <%= f.text_field :kana_last_name,autoforcus: true, autocomplete: "last_name_kana",  placeholder: "(セイ)" %>
        </div>
        <div class="col-lg-3">
          <%= f.text_field :kana_first_name,autoforcus: true, autocomplete: "first_name_kana",  placeholder: "(メイ)" %>
        </div>
      </div><br>
      
      <div class="row">
        <label class="col-lg-3">メールアドレス</label>
        <div class="col-lg-3">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "\uf0e0", class: 'fa' %>
        </div>
      </div><br>


      <div class="row">
        <label class="col-lg-3">郵便番号（ハイフンなし）</label>
        <div class="col-lg-3">
          <%= f.text_field :postal_code %>
        </div>
      </div><br>
      
      <div class="row">
        <label class="col-lg-3">住所</label>
        <div class="col-lg-6">
          <%= f.text_field :residence, autofocus: true %>
        </div>
      </div><br>


      <div class="row">
        <label class="col-lg-3">電話番号（ハイフンなし）</label>
        <div class="col-lg-3">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "telephone_number",  placeholder: "\uf095", class: 'fa' %>
        </div>
      </div><br>


      <div class="row">
        <label class="col-lg-3">パスワード
        <% if @minimum_password_length %>
          <em>(<%= @minimum_password_length %>文字以上)</em>
        <% end %></label>
        <div class="col-lg-3">
          <%= f.password_field :password, autocomplete: "encrypted_password",  placeholder: "\uf023", class: 'fa' %>
        </div>
      </div><br>


      <div class="row">
        <label class="col-lg-3">パスワード（確認用）</label>
        <div class="col-lg-3">
          <%= f.password_field :password_confirmation, autocomplete: "encrypted_password",  placeholder: "\uf023", class: 'fa' %>
        </div>
      </div><br>

      <div class="actions">
        <%= f.submit "新規登録", class: "btn btn-success" %>
      </div>
    
    <% end %>

    <br><br>
    <div class="col-xs-9">
      <h3 class="head-line title_h2 text-center">既に登録済みの方</h3>
      <p class="new-link text-center"><%= render "customers/shared/links" %>からログインしてください。</p>
    </div>
    
</div>

<br><br>