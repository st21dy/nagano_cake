<% provide(:title, "配送先編集") %>

<br><br>

<center>
    <div>
        <h3><strong>配送先編集</strong></h3>
        <br>

        <%= render "layouts/error_messages", resource: @shipping_address %>
        <%= form_with model: @shipping_address, url:customers_address_path, local: true ,method: :patch do |f| %>

            <div class="shipping_addres col-xs-10">
                <div class="form-group col-xs-12">
                    <%= f.label :"郵便番号(ハイフンなし)",class: "col-xs-3 control-label" %>
                    <br>
                    <%= f.text_field :postal_code ,class: "col-xs-2 form-control-static postal_code" %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"住所" ,class: "col-xs-3 control-label" %>
                    <br>
                    <%= f.text_field :address ,class: "col-xs-9 form-control-static address" %>
                </div>

                <div class="form-group col-xs-12">
                    <%= f.label :"宛名" ,class: "col-xs-3 control-label" %>
                    <br>
                    <%= f.text_field :name ,class: "col-xs-4 form-control-static name" %>
                </div>
                <div class="form-group col-xs-12">
                    <%= f.submit '編集する' ,class: "col-xs-2 btn btn-dark pull-right" %>
                </div>
            </div>
        <% end %>
            <div class="shipping-back col-xs-12">
                <%= link_to "配送先登録/一覧へ戻る", customers_addresses_path, data: {"turbolinks" => false}, class: "btn btn-dark" %>
            </div>
    </div>
</center>

<br><br>
