<% provide(:title, "マイページ") %>

<br><br>
<center>

	<div class="col-xs-offset-1 col-xs-8">
		<h3><strong>マイページ</strong></h3>
		<br>
		
		<p>
			<strong class="information-link"><i class="far fa-user"></i>登録情報</strong>
			<br>
			<%= link_to " 編集する", customer_edit_path, class: "glyphicon glyphicon-pencil btn btn-dark" %>
			<%= link_to " パスワードを変更する", edit_customer_registration_path, class: "glyphicon glyphicon-pencil btn btn-dark" %>
		</p>

			<table class="table table-bordered table-condensed" >
				<tbody>
					<tr>
						<td class="col-xs-2">氏名</td>
						<td class="text-left"><%= full_name(@customer) %></td>
					</tr>
					<tr>
						<td class="col-xs-2">カナ</td>
						<td class="text-left"><%= kana_full_name(@customer) %></td>
					</tr>
					<tr>
						<td class="col-xs-2">郵便番号</td>
						<td class="text-left"><%= @customer.postal_code %></td>
					</tr>
					<tr>
						<td class="col-xs-2">住所</td>
						<td class="text-left"><%= @customer.residence %></td>
					</tr>
					<tr>
						<td class="col-xs-2">電話番号</td>
						<td class="text-left"><%= @customer.telephone_number %></td>
					</tr>
					<tr>
						<td class="col-xs-2">メールアドレス</td>
						<td class="text-left"><%= @customer.email %></td>
					</tr>
				</tbody>
			</table>

			<P>
				<strong class="shipping-link">配送先</strong>
				<%= link_to " 一覧を見る", customers_addresses_path, data: {"turbolinks" => false}, class: "glyphicon glyphicon-folder-open btn btn-dark" %>
			</p>
			<p>
				<strong class="order-link">注文履歴</strong>
				<%= link_to " 一覧を見る", customers_orders_path, class: "glyphicon glyphicon-folder-open btn btn-dark" %>
			</p>

	</div>

</center>
<br><br>